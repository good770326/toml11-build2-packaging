#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define TOML11_VERSION       $toml11.version.project_number$ULL
#define TOML11_VERSION_STR   "$toml11.version.project$"
#define TOML11_VERSION_ID    "$toml11.version.project_id$"
#define TOML11_VERSION_FULL  "$toml11.version$"

#define TOML11_VERSION_MAJOR $toml11.version.major$
#define TOML11_VERSION_MINOR $toml11.version.minor$
#define TOML11_VERSION_PATCH $toml11.version.patch$

#define TOML11_PRE_RELEASE   $toml11.version.pre_release$

#define TOML11_SNAPSHOT_SN   $toml11.version.snapshot_sn$ULL
#define TOML11_SNAPSHOT_ID   "$toml11.version.snapshot_id$"
